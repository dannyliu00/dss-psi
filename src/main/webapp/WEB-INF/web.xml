<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!-- JAX-RS implementation -->
    <servlet>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- URL mapping for JAX-RS services -->
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/webapi/*</url-pattern>
    </servlet-mapping>

    <!-- Servlet filter for application authentication -->
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>com.polaris.pwf.filter.SessionFilter</filter-class>
    </filter>

    <!-- URL's we want to lock down -->
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/landing.jsp</url-pattern>
        <url-pattern>/webapi/*</url-pattern>
        <url-pattern>/dealer/*</url-pattern>
        <url-pattern>/dsm/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/forward</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <resource-env-ref>
        <resource-env-ref-name>concurrent/execSvc</resource-env-ref-name>
        <resource-env-ref-type>java.util.concurrent.ExecutorService</resource-env-ref-type>
    </resource-env-ref>

</web-app>